{
  "name": "pgfriendo",
  "displayName": "PG Friendo",
  "description": "Creates queries and other fun things with your default database.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other"
  ],
  "extensionDependencies": [
    "vscode.git"
  ],
  "activationEvents": [],
  "enabledApiProposals": [
    "chatParticipant",
    "chatVariableResolver",
    "languageModels",
    "workspaceTrust"
  ],
  "main": "./extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "dba.pg",
        "name": "pg",
        "description": "Let's have some fun with Postgres",
        "commands": [
          {
            "name": "conn",
            "description": "What database should I connect to? Enter a postgres:// string"
          },
          {
            "name": "query",
            "description": "Let's query your data"
          }
        ]
      }
    ],
    "commands": [
      {
          "command": "pg.csv",
          "title": "Print current results to CSV"
      }
  ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.86.0",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@mrodrig/json-2-csv-cli": "^5.0.0",
    "ascii-table3": "^0.9.0",
    "dotenv": "^16.4.5",
    "octokit": "^3.1.2",
    "pg-promise": "^11.5.5",
    "promised-sqlite3": "^2.1.0",
    "sqlite3": "^5.1.7"
  }
}
